<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical"
        tools:context=".otp.KycPhoneStep1Fragment"
        tools:ignore="HardcodedText, ContentDescription">

        <include
            android:id="@+id/header"
            layout="@layout/header_layout_identity_card" />

        <com.ghtk.internal.base.gui.views.CircleImageView
            android:id="@+id/imv_done"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_below="@+id/header"
            tools:src="@tools:sample/avatars"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" />

        <com.ghtk.internal.base.gui.views.GTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imv_done"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/default_margin_padding"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="@dimen/default_margin_padding"
            android:text="Hoàn thành!"
            android:textColor="@color/color_black"
            android:textSize="20sp"
            app:font_text_view_base="bold"
            android:textStyle="bold"/>

        <com.ghtk.internal.base.gui.views.GTextView
            android:id="@+id/txt_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/ll_button_confirm"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="40dp"
            android:textAllCaps="false"
            android:textColor="@color/color_black"
            android:textSize="@dimen/text_size_message"
            app:font_text="regular"
            tools:text="text"/>

        <LinearLayout
            android:id="@+id/ll_button_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <com.ghtk.internal.base.gui.views.GButton
                android:id="@+id/btn_previous"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_margin="@dimen/default_margin_padding"
                android:layout_marginStart="@dimen/default_margin_padding"
                android:background="@drawable/background_boader_primary_color"
                android:text="Thực hiện lại"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_normal"
                app:font_text="regular" />

            <com.ghtk.internal.base.gui.views.GButton
                android:id="@+id/btn_next"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_margin="@dimen/default_margin_padding"
                android:layout_marginStart="@dimen/default_margin_padding"
                android:background="@drawable/button_green_radius_3dp"
                android:text="Sử dụng"
                android:textAllCaps="false"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_normal"
                app:font_text="regular" />

        </LinearLayout>

    </RelativeLayout>

</layout>
