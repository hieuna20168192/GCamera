<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".identitycard.KycIdentityCardStep2Fragment"
    tools:ignore="HardcodedText, ContentDescription, RtlSymmetry">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_white">

        <include
            android:id="@+id/ll_header"
            layout="@layout/header_layout_identity_card" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <com.ghtk.internal.base.gui.views.GTextView
                        android:id="@+id/tv_title_card_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/default_margin_padding"
                        android:text="CMND/Căn cước "
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/text_size_normal" />

                    <com.ghtk.internal.base.gui.views.GEditText
                        android:id="@+id/tv_identity_card_number"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/default_margin_padding"
                        android:gravity="start|center_vertical"
                        android:paddingStart="4dp"
                        android:textColor="@color/color_black"
                        android:textSize="15sp"
                        tools:text="013599927"
                        android:inputType="number|textNoSuggestions"
                        android:digits="0123456789"
                        android:hint="Nhập CMND/CCCD"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <com.ghtk.internal.base.gui.views.GTextView
                        android:id="@+id/tv_title_identity_card_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/default_margin_padding"
                        android:text="Ngày cấp"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/text_size_normal" />

                    <com.ghtk.internal.base.gui.views.GTextView
                        android:id="@+id/tv_identity_card_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/default_margin_padding"
                        android:gravity="end|center_vertical"
                        android:paddingStart="4dp"
                        android:textColor="@color/color_black"
                        android:textSize="15sp"
                        tools:text="11/12/2020"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="6dp"
                        android:background="@drawable/bg_gray_corner_3dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <com.ghtk.internal.base.gui.views.GTextView
                        android:id="@+id/tv_title_identity_card_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/default_margin_padding"
                        android:text="Nơi cấp"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/text_size_normal" />

                    <com.ghtk.internal.base.gui.views.GTextView
                        android:id="@+id/tv_identity_card_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/default_margin_padding"
                        android:layout_toEndOf="@id/tv_title_identity_card_address"
                        android:gravity="end|center_vertical"
                        android:paddingStart="4dp"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/text_size_normal"
                        tools:text="Hà Nội" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <com.ghtk.internal.base.gui.views.GTextView
                        android:id="@+id/tv_title_identity_card_out_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/default_margin_padding"
                        android:text="Ngày hết hạn"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/text_size_normal" />

                    <com.ghtk.internal.base.gui.views.GTextView
                        android:id="@+id/tv_identity_card_out_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/default_margin_padding"
                        android:gravity="end|center_vertical"
                        android:textColor="@color/color_black"
                        android:textSize="15sp"
                        tools:text="11/12/2020"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="6dp"
                        android:background="@drawable/bg_gray_corner_3dp"/>

                </RelativeLayout>

                <View
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="@color/gray_text_ios"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="15dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.ghtk.internal.base.gui.views.GTextView
                        android:id="@+id/tv_title_identity_card_full_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/default_margin_padding"
                        android:text="Họ và tên"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/text_size_normal" />

                    <com.ghtk.internal.base.gui.views.GEditText
                        android:id="@+id/tv_identity_card_full_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/default_margin_padding"
                        android:gravity="start|center_vertical"
                        android:paddingStart="4dp"
                        android:textColor="@color/color_black"
                        android:textSize="15sp"
                        tools:text="Phạm Hiển"
                        android:inputType="text|textNoSuggestions"
                        android:paddingEnd="8dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <com.ghtk.internal.base.gui.views.GTextView
                        android:id="@+id/tv_title_identity_card_birth_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/default_margin_padding"
                        android:text="Ngày sinh"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/text_size_normal" />

                    <com.ghtk.internal.base.gui.views.GTextView
                        android:id="@+id/tv_identity_card_birth_day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/default_margin_padding"
                        android:gravity="end|center_vertical"
                        android:paddingStart="4dp"
                        android:textColor="@color/color_black"
                        android:textSize="15sp"
                        tools:text="11/12/2020"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="6dp"
                        android:background="@drawable/bg_gray_corner_3dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <com.ghtk.internal.base.gui.views.GTextView
                        android:id="@+id/tv_title_identity_card_home_town"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/default_margin_padding"
                        android:text="Quê quán"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/text_size_normal" />

                </RelativeLayout>

                <com.ghtk.internal.base.gui.views.GEditText
                    android:id="@+id/tv_identity_card_home_town"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/default_margin_padding"
                    android:gravity="start|center_vertical"
                    android:paddingStart="4dp"
                    android:textColor="@color/color_black"
                    android:textSize="15sp"
                    tools:text="Bắc Giang"
                    android:hint="Nhập quê quán"
                    android:layout_marginStart="8dp"
                    android:inputType="text|textNoSuggestions"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <com.ghtk.internal.base.gui.views.GTextView
                        android:id="@+id/tv_title_identity_card_address_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_margin_padding"
                        android:text="Địa chỉ"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/text_size_normal" />

                    <com.ghtk.internal.base.gui.views.GTextView
                        android:id="@+id/tv_identity_card_address_guide"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/color_black"
                        android:textSize="12sp"
                        android:hint="(Số nhà, tên đường phố, tòa nhà, khu đô thị)"/>

                    <com.ghtk.internal.base.gui.views.GEditText
                        android:id="@+id/tv_identity_card_address_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/color_black"
                        android:textSize="15sp"
                        tools:text="An Bình, Khu Đô thị TP Giao Lưu"
                        android:hint="Nhập địa chỉ"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <com.ghtk.internal.base.gui.views.GTextView
                        android:id="@+id/tv_title_nation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/default_margin_padding"
                        android:text="Quốc tịch"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/text_size_normal" />

                    <com.ghtk.internal.base.gui.views.GEditText
                        android:id="@+id/tv_identity_card_nation"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/default_margin_padding"
                        android:gravity="start|center_vertical"
                        android:paddingStart="4dp"
                        android:textColor="@color/color_black"
                        android:textSize="15sp"
                        tools:text="Việt Nam"
                        android:hint="Nhập quốc tịch"
                        android:inputType="text|textNoSuggestions"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <com.ghtk.internal.base.gui.views.GTextView
                        android:id="@+id/tv_title_identity_card_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/default_margin_padding"
                        android:text="Giới tính"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/text_size_normal" />

                    <RadioGroup
                        android:id="@+id/radio_group_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginEnd="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true">

                        <RadioButton
                            android:id="@+id/radio_gender_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nam"
                            android:textColor="@color/colorPrimary"/>

                        <RadioButton
                            android:id="@+id/radio_gender_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nữ"
                            android:textColor="@color/colorPrimary"/>

                    </RadioGroup>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

        <com.ghtk.internal.base.gui.views.GButton
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/button_green_radius_3dp"
            android:text="Xác nhận"
            android:layout_margin="@dimen/default_margin_padding"
            android:layout_marginStart="@dimen/default_margin_padding"
            android:textAllCaps="false"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_normal"
            app:font_text="regular" />

    </LinearLayout>

</layout>
