<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_black"
        android:orientation="vertical">

        <androidx.camera.view.PreviewView
            android:id="@+id/preview_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view_end"
            android:layout_alignParentTop="true"
            app:scaleType="fillCenter" />

        <View
            android:id="@+id/top_preview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:background="#DF000000" />

        <RelativeLayout
            android:id="@+id/rela_face"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_preview">

            <com.ghtk.internal.ekyc.ui.views.progressviews.CircleSegmentBar
                android:id="@+id/face_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:bar_width="10dp"
                app:progress_color="@color/colorPrimary"
                app:progress_width="10dp" />

            <com.ghtk.internal.base.gui.views.GTextView
                android:id="@+id/tv_waring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_round_waring_face_camera"
                android:gravity="center"
                android:maxWidth="300dp"
                android:padding="@dimen/default_margin_padding"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_message"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rela_face"
            android:background="#DF000000" />

        <com.ghtk.internal.base.gui.views.GTextView
            android:id="@+id/txt_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="40dp"
            android:textAllCaps="false"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_message"
            app:font_text="regular" />

        <RelativeLayout
            android:id="@+id/rela_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <com.ghtk.internal.base.gui.views.GImageButton
                android:id="@+id/btn_back_header"
                android:layout_width="@dimen/default_icon_size"
                android:layout_height="@dimen/default_icon_size"
                android:background="@android:color/transparent"
                android:padding="2dp"
                android:src="@drawable/ic_white_back" />

            <com.ghtk.internal.base.gui.views.GTextView
                android:id="@+id/txt_title_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_title"
                app:font_text_view_base="bold"
                tools:text="Xác thực số điện thoại" />
        </RelativeLayout>

        <com.ghtk.internal.base.gui.views.GTextView
            android:id="@+id/txt_action_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rela_face"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/default_margin_padding"
            android:layout_marginEnd="@dimen/default_margin_padding"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_title"
            app:font_text_view_base="medium"
            tools:text="Quay sang trai" />

        <RelativeLayout
            android:id="@+id/rela_icon"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_action_des"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/default_margin_padding"
            android:layout_marginTop="@dimen/default_margin_padding"
            android:layout_marginEnd="@dimen/default_margin_padding"
            android:layout_marginBottom="@dimen/default_margin_padding"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv_action_left"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_action_left"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imv_action_right"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_action_right"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/imv_action_face"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_face_nomal"
                android:visibility="invisible" />

        </RelativeLayout>

        <com.ghtk.internal.base.gui.views.GTextView
            android:id="@+id/tv_label"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rela_icon"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/color_white"
            tools:text="Mask" />

        <View
            android:id="@+id/view_end"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rela_icon" />
    </RelativeLayout>
</layout>
